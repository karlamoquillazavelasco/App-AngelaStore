@model IEnumerable<App_AngelaStore.Models.Producto>
@{
    ViewData["Title"] = "Productos";
}

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

<br>
<br>
<p> </p>
<p> </p>
<div class="section-title" style="text-align: center;">
          <h1 style="font-family: Georgia, Times, Times New Roman, serif;color:#000000" ><strong>Prendas Registradas</strong></h1>
          <h6 style="font-family: Georgia, Times, Times New Roman, serif;color:#000000">Visualiza todos las Prendas registrados de nuestro almacen</h6>
          <p>
              <p></p>
    <button class="btn btn-dark"  onclick="window.location='@Url.Action("Index", "Producto")'">Registrar</button>
</p>
</div>
<p> </p>
<div class="container" style="text-align: center;">
<table class="table table-hover">
    <thead class="thead-dark">
        <tr class="center" >
                <th scope="col">
                    Opciones
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Codigo)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Marca)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Precio)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.imagen)
                </th>
        </tr>
    </thead>

    <tbody>

    @foreach (var item in Model)
    {
        <tr class="center" >
            <th scope="row">
                <a  class="btn btn-info" asp-action="Edit" asp-route-id="@item.ID">Editar</a>
                <a  class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID" id="delete">Eliminar</a>
            </th>
            <td  style="color:#000000;font-family:Rockwell, Courier Bold, Courier, Georgia, Times, Times New Roman, serif">
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td  style="color:#000000;font-family:Rockwell, Courier Bold, Courier, Georgia, Times, Times New Roman, serif">
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td  style="color:#000000;font-family:Rockwell, Courier Bold, Courier, Georgia, Times, Times New Roman, serif">
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td style="text-align: center;">
               <div class="card img;border border-dark" style="width: 12rem;text-align: center;" >
               <img src="@item.imagen" class="card-img-top;"  alt="...">
               

            </td>

        </tr>
    }        
    </tbody>    
</table>
</div>


