@{
    
    Layout="_Layout";
}
@model Contactanos

<link rel="stylesheet" href="~/css/estilos.css" />
<p> </p>
<p> </p>
<body class="fondo3">
<br>
 
  <div class="section-title" style="text-align: center;">
      <h1 data-aos="fade-in" style="font-family: Georgia, Times, Times New Roman, serif;color:#000000"><strong>Contactanos</strong></h1>
      <h6 data-aos="fade-in" style="font-family: Georgia, Times, Times New Roman, serif;">Dejenos sus opiniones a fin de mejorar</h6>
			<p> </p>
  </div>
</br>
<div class="row" >
  <div class="col-md-6">
<form asp-controller="Contactanos" asp-action="Create">
     <div class="form-group" style="text-align: left;">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" type="text" required/>
            </div>    
                 <div class="form-group" style="text-align: left;">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" type="email" required />
            </div>         
            <div class="form-group" style="text-align: left;">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" type="number" maxlength="9" required />
            </div> 
              <div class="form-group" style="text-align: left;">
                <label asp-for="Asunto" class="control-label"></label>
                <input asp-for="Asunto" class="form-control"  type="text" required/>
            </div>  
            
            <div  class="mb-3" style="text-align: left;" >
                <label asp-for="Mensaje" class="control-label" ></label>
                <textarea asp-for="Mensaje"  class="form-control "></textarea>
            </div>   
                   
            <div class="form-group" style="text-align: center;" >
                 <button type="submit" class="btn btn-primary" type="text" required>Enviar</button> 
            </div>                

</form>
  </div>

<div class="col-md-6" style="width: 100%;">
  <img src="/img/contactanos1.jpg" style="height: 500px; width: 700px;">
</div>
</body>

